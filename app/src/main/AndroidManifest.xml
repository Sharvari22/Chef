<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chef">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Chef">
        <activity android:name=".ChefLoginActivity"></activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".UserSelection" />
        <activity android:name=".StepperForm" />
        <activity android:name=".NotificationActivity" />
        <activity android:name=".SearchActivity" />
        <activity
            android:name=".ChefMainPage"
            android:label="@string/title_activity_chef_main_page"
            android:theme="@style/Theme.Chef.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>